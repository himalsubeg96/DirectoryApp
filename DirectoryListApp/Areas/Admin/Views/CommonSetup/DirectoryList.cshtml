@model DirectoryListApp.Areas.Admin.Models.DirectoryViewModel

@{
    ViewBag.Title = "DirectoryList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Scripts/DataTable/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/datatables.min.js"></script>
<section>
    <div class="container">
        <div class="sec-title">
            <h3>Directory List</h3>
        </div>
        <div class="row" style="margin-bottom:15px;">
            <div class="col-md-6">
                <a class="btn btn-outline-primary" href="~/Admin/CommonSetup/InsertDirectory">
                    Create New
                </a>
            </div>
        </div>
        <div id="ResultDisplay" class="well well-small">

            @if (Model.DirectoryViewModelList.Count > 0)
            {
                int Sno = ViewBag.currentPage == 1 ? 0 : (ViewBag.currentPage - 1) * 20;
                <table id="DirectoryItem" class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th class="span1"><label>S.N</label> </th>
                            <th> @Html.Label("Directory Name")</th>
                            <th>@Html.Label("Address")</th>
                            <th>@Html.Label("Directory Phone")</th>
                            <th>@Html.Label("Category")</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DirectoryViewModelList)
                        {

                            <tr class="@(Sno++ % 2 == 0 ? "success" : "warning")">
                                <td class="span1l">
                                    @Sno.ToString()
                                </td>
                                <td>@item.DirectoryItemName</td>
                                <td>@item.PermanentAddress</td>
                                <td>@item.DirectoryPhone</td>
                                <td>@Utility.GetDirectoryCategoryName(item.DirectoryCategoryId)</td>
                                <td>
                                    <a href="~/Admin/CommonSetup/UpdateDirectory/@item.DirectoryItemId" title="Edit"><i class="fa fa-edit" style="color:blue;"></i></a>
                                    <a class="details" href="~/Admin/CommonSetup/DirectoryDetail/@item.DirectoryItemId" title="View Details"><i class="fa fa-pinterest" style="color:lightseagreen;"></i></a>

                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h4>No records found!</h4>
            }

        </div>
    </div>
    
    
</section>
<script>
    var table = $('#DirectoryItem').DataTable({
        "order": false,
        "pageLength": 25,
        "language": {
            "lengthMenu": "Display _MENU_ records per page",
            "zeroRecords": "No records available!",
            "info": " Page _PAGE_ of _PAGES_",
            "infoEmpty": "No records available",
            "infoFiltered": "(filtered from _MAX_ total records)",
            "paginate":
            {
                "previous": "Previous",
                "next": "Next"
            }
        }
    });
</script>


