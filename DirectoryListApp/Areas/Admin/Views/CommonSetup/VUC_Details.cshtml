@model DirectoryListApp.Areas.Admin.Models.DirectoryViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/CSS/bootstrap.css" rel="stylesheet" />
<link href="~/Content/CSS/menu.css" rel="stylesheet" />
<link href="~/Content/CSS/styles.css" rel="stylesheet" />
<link href="~/Content/CSS/default.css" rel="stylesheet" id="color" />
@Html.HiddenFor(model => model.DirectoryItemId)
<!-- START SECTION LISTING RIGHT -->
<section class="listings-right popular list featured portfolio blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12 blog-pots">

                <div class="row featured portfolio-items">
                    <div class="item col-lg-5 col-md-12 col-xs-12 landscapes sale pr-0 pb-0">
                        <div class="project-single mb-0 bb-0">
                            <div class="project-inner project-head">
                                <div class="homes">
                                    <!-- homes img -->
                                    <a href="#" class="homes-img hover-effect">
                                        @if (Model.PhotoLogo != null)
                                        {
                                            <img src="@Model.PhotoLogo" class="img-responsive" />
                                        }
                                        else
                                        {
                                            <img src="~/Images/NoImage (1).png" alt="Photo" class="img-responsive" />
                                        }
                                        <div class="overlay"></div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- homes content -->
                    <div class="col-lg-7 col-md-12 homes-content pb-0 mb-44">
                        <!-- homes address -->
                        <div class="enty">
                            <a href="#">
                                <h3 class="mb-4">@Html.DisplayFor(model => model.DirectoryItemName)</h3>
                            </a>
                            <ul class="homes-list clearfix">
                                <li>
                                    <i class="fa fa-map-marker"></i>
                                    <span>@Html.DisplayFor(model => model.PermanentAddress)</span>
                                </li>
                                <li>
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                    <span>@Html.DisplayFor(model => model.DirectoryPhone)</span>
                                </li>
                                <li>
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <span>@Html.DisplayFor(model => model.ContactPersonName)</span>
                                </li>
                                <li>
                                    <i class="fa fa-mobile-phone" aria-hidden="true"></i>
                                    <span>@Html.DisplayFor(model => model.ContactPersonPhone)</span>
                                </li>
                            </ul>
                        </div>
                        <!-- Price -->
                        <div class="price-properties">
                            <ul class="starts text-left mb-0">
                                <li class="mt-3">
                                    @Html.DisplayFor(model => model.Details)
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
<!-- END SECTION LIST-->
   
