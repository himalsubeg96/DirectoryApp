@model DirectoryListApp.Areas.Admin.Models.SubCategorySetupViewModel

<section>
    <div class="container">
        <div class="row">
            <div class="sec-title">
                <h3>Directory SubCategory</h3>
            </div>
        </div>
            @Html.HiddenFor(model => model.DirectorySubCategoryId)
            @Html.HiddenFor(model => model.CreatedBy)
            @Html.HiddenFor(model => model.CreatedDate)
           
            <div class="row">
             
                    <div class="form-group">
                        @Html.Label("Category")
                        @Html.DropDownListFor(model => model.DirectoryCategoryId, DirectoryListApp.Utility.GetAllDirectoryCategory(), "--Select--", new { @class = "form-control", @required = "required", @data_name = "DirectoryCategoryId" })
                        @Html.ValidationMessageFor(model => model.DirectoryCategoryId)
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(model => model.DirectorySubCategoryId)
                        @Html.HiddenFor(model => model.DirectorySubCategoryId, new { @class = "form-control", @data_name = "DirectorySubCategoryId" })
                        @Html.ValidationMessageFor(model => model.DirectorySubCategoryId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DirectorySubCategoryName)
                        @Html.TextBoxFor(model => model.DirectorySubCategoryName, new { @class = "form-control", @data_name = "DirectorySubCategoryName" })
                        @Html.ValidationMessageFor(model => model.DirectorySubCategoryName)
                    </div>
            </div>
    </div>
</section>
