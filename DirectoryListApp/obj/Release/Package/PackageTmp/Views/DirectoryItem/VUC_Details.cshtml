@model DirectoryListApp.Models.DirectoryModel

<div>
    <figure style="margin-bottom:2px;border:1px solid #eee;padding:2px;display:inline-block;">
        @if (Model.PhotoLogo != null)
        {
            <img src="~/DirectoryLogo/@Model.PhotoLogo" height="100" width="100" class="thumbnail" />
        }
        else
        {
            <img id="imgPreview" src="~/Content/img/NoImage (1).png" width="70" height="70" alt="Photo" />
        }

    </figure>

    <dl class="span9">
        <dt class="span3">
            @Html.HiddenFor(model => model.DirectoryItemId  )
        </dt>
        <dd class="span5">
            @Html.HiddenFor(model => model.DirectoryItemId)
        </dd>
    </dl>
    <dl class="span9">
        <dt class="span3">
            @Html.DisplayNameFor(model => model.DirectoryItemName )
        </dt>
        <dd class="span5">
            @Html.DisplayFor(model => model.DirectoryItemName)
        </dd>
    </dl>
    <dl class="span9">
        <dt class="span3">
            @Html.DisplayNameFor(model => model.DirectoryPhone  )
        </dt>
        <dd class="span5">
            @Html.DisplayFor(model => model.DirectoryPhone)
        </dd>
    </dl>
    <dl class="span9">
        <dt class="span3">
            @Html.DisplayNameFor(model => model.ContactPersonName)
        </dt>
        <dd class="span5">
            @Html.DisplayFor(model => model.ContactPersonName)
        </dd>
    </dl>
    <dl class="span9">
        <dt class="span3">
            @Html.DisplayNameFor(model => model.ContactPersonPhone)
        </dt>
        <dd class="span5">
            @Html.DisplayFor(model => model.ContactPersonPhone)
        </dd>
    </dl>
    <dl class="span9">
        <dt class="span3">
                @Html.DisplayNameFor(model => model.PermanentAddress)
        </dt>
        <dd class="span5">
            @Html.DisplayFor(model => model.PermanentAddress)
        </dd>
    </dl>
    <dl class="span9">
        <dt class="span3">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="span5">
            @Html.DisplayFor(model => model.Details)
        </dd>
    </dl>
</div>          