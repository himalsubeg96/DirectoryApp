@model DirectoryListApp.Models.DirectoryModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well well-small">
    @Html.HiddenFor(model=>model.DirectoryItemId)
    @using (Html.BeginForm("Edit", "DirectoryItem", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        Html.RenderPartial("VUC_Add");
        <br />

        <input type="submit" value="Edit and Save" class="btn" />
        <div class="btn">  @Html.ActionLink("Back To List", "Index")</div>

    }
</div>

