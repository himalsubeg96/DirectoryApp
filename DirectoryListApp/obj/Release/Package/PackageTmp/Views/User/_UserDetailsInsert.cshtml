@model DirectoryListApp.Models.UserModel

@using (Html.BeginForm("Insert", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="col-12 mb-30">
            @Html.TextBoxFor(m => m.FullName, new { @placeholder = "Display Name" })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
        </div>

        <div class="col-12 mb-30">
            @Html.TextBoxFor(m => m.PhoneNo, new { @placeholder = "Phone Number" })
            @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
        </div>
        <div class="col-12 mb-30">
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-12 mb-30">
            <input type="file" name="file" class="form-control" />
        </div>

        <div class="col-12">
            <button class="save-change-btn">Save Changes</button>
        </div>

    </div>
}