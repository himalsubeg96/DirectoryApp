@using DirectoryListApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="page-content mb-50" style="margin-top: 10px;">
    <div class="container">
        <div style="width: 50%; float:left">
            <div class="control-list col-md-6">
                @Html.Partial("_Login", new DirectoryListApp.Models.LoginViewModel())
            </div>
        </div>

        <div style="width: 50%; float:right">
            <div class="control-list col-md-6">
                @Html.Partial("_Register", new DirectoryListApp.Models.RegisterViewModel())
            </div>
        </div>
    </div>
</div>
